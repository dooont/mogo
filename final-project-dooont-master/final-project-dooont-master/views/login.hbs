<button onclick="window.location.href='/';" class="bg-cream-white text-pastel-purple font-bold py-2 px-4 rounded hover:bg-nyu-purple hover:text-white transition-colors duration-300 ease-in-out">
    Back to Home
</button>
<h2 class="text-3xl font-bold text-nyu-purple text-center py-4">
    Login Page
</h2>
{{#if message}}
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    {{ message }}
</div>
{{/if}}
<form method="POST" action="login" class="flex flex-col items-center justify-center mt-4">
    <div class="flex flex-col items-center w-full max-w-md px-4 py-2">
        <label for="username" class="mb-2 font-medium text-pastel-purple">Username:</label>
        <input type="text" name="username" id="username" value="" class="w-full px-4 py-2 rounded-lg border-2 border-nyu-purple focus:ring-2 focus:ring-pastel-purple focus:outline-none bg-cream-white text-black placeholder-gray-500">
    </div>
    <div class="flex flex-col items-center w-full max-w-md px-4 py-2">
        <label for="password" class="mb-2 font-medium text-pastel-purple">Password:</label>
        <input type="password" name="password" id="password" value="" class="w-full px-4 py-2 rounded-lg border-2 border-nyu-purple focus:ring-2 focus:ring-pastel-purple focus:outline-none bg-cream-white text-black placeholder-gray-500">
    </div>
    <div class="flex justify-center w-full max-w-md px-4 py-3">
        <input type="submit" value="Login" class="bg-nyu-purple hover:bg-pastel-purple text-white font-bold py-2 px-4 rounded cursor-pointer transition-colors duration-300 ease-in-out">
    </div>
</form>
