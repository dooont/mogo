<button onclick="window.location.href='/';" class="bg-cream-white text-pastel-purple font-bold py-2 px-4 rounded hover:bg-nyu-purple hover:text-white transition-colors duration-300 ease-in-out">
    Back to Home
</button>
<form action="/db/{{this.type}}" method="POST" class="flex flex-col items-center justify-center space-y-4 mt-6">
    <div class="w-full max-w-xs">
        <label for="name" class="block text-sm font-medium text-gray-700">Name:</label>
        <input type="text" id="name" name="name" value="{{this.name}}" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-nyu-purple focus:border-nyu-purple">
    </div>

    <div class="w-full max-w-xs">
        <label for="address" class="block text-sm font-medium text-gray-700">Address:</label>
        <input type="text" id="address" name="address" value="{{this.address}}" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-nyu-purple focus:border-nyu-purple">
    </div>

    <div class="w-full max-w-xs">
        <label for="cuisine" class="block text-sm font-medium text-gray-700">Cuisine:</label>
        <input type="text" id="cuisine" name="cuisine" value="{{this.cuisine}}" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-nyu-purple focus:border-nyu-purple">
    </div>

    <div class="w-full max-w-xs">
        <label for="price" class="block text-sm font-medium text-gray-700">Price Range:</label>
        <input type="text" id="price" name="price" value="{{this.price}}" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-nyu-purple focus:border-nyu-purple">
    </div>

    <input type="hidden" name="id" value="{{this.id}}"> 

    <button type="submit" class="bg-cream-white text-pastel-purple font-bold py-2 px-4 rounded hover:bg-nyu-purple hover:text-white transition-colors duration-300 ease-in-out">
        Submit
    </button>
</form>
